extends layout

block content
  h1= title
  p Welcome to #{title}
  p Please register to continue
  form(method='POST' action='/users/register')
    div.form-group
      label(for='username')
      input#name.form-control(type='text', placeholder='username' name='username')
    div.form-group
      label(for='password')
      input#name.form-control(type='password', placeholder='password' name='password')
    div.form-group
      label(for='first_name')
      input#name.form-control(type='text', placeholder='first name' name='first_name')
    div.form-group
      label(for='middle_name')
      input#name.form-control(type='text', placeholder='middle name' name='middle_name')
    div.form-group
      label(for='last_name')
      input#name.form-control(type='text', placeholder='last name' name='last_name')
    div.form-group
      label(for='nickname')
      input#name.form-control(type='text', placeholder='nickname' name='nickname')
    div.form-group
      label(for='date_of_birth')
      input#name.form-control(type='date', placeholder='username' name='date_of_birth')
    button.btn.btn-primary(type='submit') Sign up

